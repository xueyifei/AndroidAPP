<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutActionBarWithIcon"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="#009BDF"
    android:orientation="horizontal"
    android:weightSum="5">

    <ImageButton
        android:id="@+id/imageViewActionBarLeft"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|center_vertical"
        android:layout_margin="5dip"
        android:layout_weight="1"
        android:src="@drawable/head_icon1" />

    <TextView
        android:id="@+id/textAxtionBarTitleWithIcon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:gravity="center"
        android:text="Title Text"
        android:textColor="#fff"
        android:textSize="20sp"
        />

    <ImageButton
        android:id="@+id/imageViewActionBarRight"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|center_vertical"
        android:layout_margin="5dip"
        android:layout_weight="1"
        android:src="@drawable/head_icon2" />

</LinearLayout>
