<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="6"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/receiveAddressName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/receive_address_name"/>

                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/receiveAddressPhoneNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/receive_address_phone_num"/>
            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/receiveAddressAddress"
                android:text="@string/receive_address_address"/>

        </LinearLayout>

        <Button
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/receiveAddressEditButtom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_blue"
            android:text="@string/receive_address_address_edit"
            android:textColor="#fff"/>

        <Button
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/receiveAddressDeleteButtom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_blue"
            android:text="@string/receive_address_address_delete"
            android:textColor="#fff"/>

        <RadioButton
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/receiveAddressDefaultAddress"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            />


    </LinearLayout>



</LinearLayout>
