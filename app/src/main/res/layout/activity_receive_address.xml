<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.xue2015.myandroidapp.ReceiveAddressActivity">

    <com.example.xue2015.myandroidapp.Titlebar
        android:id="@+id/receiveAddressActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/receiveAddressListView"
            android:layout_gravity="center_horizontal"
           />

        <Button
            android:id="@+id/receiveAddressAddNewAddress"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_blue"
            android:text="@string/receive_address_add_new_address"
            android:textColor="#fff"/>

    </LinearLayout>







</LinearLayout>
