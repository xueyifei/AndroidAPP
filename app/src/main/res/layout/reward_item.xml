<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/reward_question_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/u112"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/reward_question_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="right"
                android:text="XXXX问卷"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/reward_question_remain"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reward_question_name"
                android:gravity="right"
                android:text="1000/1000份"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/reward_question_point"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="right"
                android:text="1000积分"
                android:textColor="@color/red"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="0.5dip"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:background="@layout/divider" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/reward_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/u112"/>

        <TextView
            android:id="@+id/reward_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:text="XXXX礼物"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>