<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.xueyifei.mytest.QAnswerActivity">

    <com.example.xue2015.myandroidapp.Titlebar
        android:id="@+id/QAnswerActionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_weight="8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:id="@+id/qCenterScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="01.饭前喝汤吗"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:paddingLeft="40px"
                    android:gravity="center_vertical"
                    android:background="#739d9d9d"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35px"
                    android:text="喝"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35px"
                    android:text="不喝"
                    android:checked="false"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="02.选出你喜欢吃的菜系"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:paddingLeft="40px"
                    android:gravity="center_vertical"
                    android:background="#739d9d9d"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35px"
                    android:text="中餐"
                    android:checked="false"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35px"
                    android:text="快餐"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35px"
                        android:text="其他"/>

                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="03.你喜欢哪幅图片"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:paddingLeft="40px"
                    android:gravity="center_vertical"
                    android:background="#739d9d9d"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A"
                        android:drawableRight="@drawable/u112"
                        android:layout_marginLeft="40dp"
                        android:layout_marginStart="40dp"
                        />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B"
                        android:drawableRight="@drawable/u112"
                        android:layout_marginLeft="64dp"
                        android:layout_marginStart="64dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C"
                        android:drawableRight="@drawable/u112"
                        android:layout_marginLeft="40dp"
                        android:layout_marginStart="40dp"
                        />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="D"
                        android:drawableRight="@drawable/u112"
                        android:layout_marginLeft="64dp"
                        android:layout_marginStart="64dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="04.请上传一张你喜欢吃的食物m，并说明喜欢的理由"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:paddingLeft="40px"
                    android:gravity="center_vertical"
                    android:background="#739d9d9d"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/u112"/>
                        <Button
                            android:layout_weight="1"
                            android:background="@drawable/round_corner_blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="上传图片"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:text="说明喜欢的理由："
                            android:layout_marginLeft="5px"
                            android:layout_marginRight="5px"
                            android:paddingLeft="40px"
                            android:gravity="center_vertical"
                            />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/edit_sharp"
                            android:hint="请在500个汉字以内"
                            android:ems="10"
                            android:textSize="30px"
                            android:textColorHint="#739d9d9d"
                            android:layout_weight="1" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:background="#739d9d9d"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(0/4)"
                        android:textSize="20dp"/>
                    <Button
                        android:id="@+id/qanswer_bottom_done"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="完成"
                        android:textSize="25dp"
                        android:background="@drawable/round_corner_blue"
                        android:textColor="#fff"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="4" >

        <RelativeLayout
            android:id="@+id/qanswer_bottom_button_mainpage"
            style="@style/main_page_bottom_button"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            >

            <TextView
                style="@style/main_page_bottom_text"
                android:layout_centerInParent="true"
                android:text="@string/main_page" />
        </RelativeLayout>

        <ImageView
            style="@style/left_drawer_item_line"
            android:layout_width="0.5dip"
            android:layout_height="fill_parent" />

        <RelativeLayout
            android:id="@+id/qanswer_bottom_button_questionnairecenter"
            style="@style/main_page_bottom_button"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0" >

            <TextView
                style="@style/main_page_bottom_text"
                android:layout_centerInParent="true"
                android:text="@string/questionnaire_center" />
        </RelativeLayout>

        <ImageView
            style="@style/left_drawer_item_line"
            android:layout_width="0.5dip"
            android:layout_height="fill_parent" />

        <RelativeLayout
            android:id="@+id/qanswer_bottom_button_pointshop"
            style="@style/main_page_bottom_button"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0" >

            <TextView
                style="@style/main_page_bottom_text"
                android:layout_centerInParent="true"
                android:text="@string/point_shop" />
        </RelativeLayout>

        <ImageView
            style="@style/left_drawer_item_line"
            android:layout_width="0.5dip"
            android:layout_height="fill_parent" />

        <RelativeLayout
            android:id="@+id/qanswer_bottom_button_push"
            style="@style/main_page_bottom_button"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:clickable="false">

            <TextView
                style="@style/main_page_bottom_text"
                android:layout_centerInParent="true"
                android:text="@string/push" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
